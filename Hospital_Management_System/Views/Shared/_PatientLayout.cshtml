<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Patient</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Hospital Management System.styles.css" asp-append-version="true" />
    <style>
        /* Navbar links styling */
        .navbar-nav .nav-item .nav-link {
            color: #0056b3; /* Custom blue color */
            font-weight: 500; /* Slightly bold */
            padding: 10px 15px; /* Adding padding for better spacing */
            transition: all 0.3s ease; /* Smooth transition for hover effect */
        }

            /* Hover effect for navbar links */
            .navbar-nav .nav-item .nav-link:hover {
                color: #004085; /* Darker blue when hovered */
                text-decoration: underline; /* Underline effect on hover */
            }

            /* Focus effect for navbar links */
            .navbar-nav .nav-item .nav-link:focus {
                color: #004085; /* Darker blue when focused */
                text-decoration: none; /* Remove underline on focus */
            }

            /* Active link styling */
            .navbar-nav .nav-item .nav-link.active {
                color: #003366; /* Darker shade when the link is active */
                font-weight: 600; /* Bold the active link */
            }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand" href="@Url.Action("Index", "Home")">Hospital Management System</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <!-- Patient's Links -->
                        <li class="nav-item">
                       @* <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("BookAppointment", "Doctor")">All Doctors</a>
                        *@
                       
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Patient" asp-action="PatientProfile">Add Profile</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Appointment" asp-action="BookAppointment">Book Appointment</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Appointment" asp-action="GetAppointmentByPid">View Appointments</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("View", "Patient")">Update Profile</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-danger" href="@Url.Action("Logout", "Patient")">Logout</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
  
    <div class="container">
        <main role="main" class="py-4">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container text-center">
            &copy; 2024 - Hospital Management System - All Rights Reserved
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
