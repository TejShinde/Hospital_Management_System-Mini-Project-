@model Hospital_Management_System.Models.Doctor

@{
    ViewData["Title"] = "DoctorProfile";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white text-center">
                    <h3>Create Doctor Profile</h3>
                </div>
                <div class="card-body">
                    <form asp-action="DoctorProfile">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group mb-4">
                            <label asp-for="UserID" class="form-label">Select UserName</label>
                            <select class="form-control" asp-for="UserID" asp-items="@(new SelectList(ViewBag.Users,"UserID","UserName"))"></select>
                            <span asp-validation-for="UserID" class="text-danger"></span>
                        </div>
                        <!-- Doctor Name -->
                        <div class="form-group mb-4">
                            <label asp-for="dName" class="form-label">Select Doctor Name</label>
                            <input asp-for="dName" class="form-control border-primary" placeholder="Enter doctor's name" />
                            <span asp-validation-for="dName" class="text-danger"></span>
                        </div>

                        <!-- Skills -->
                        <div class="form-group mb-4">
                            <label asp-for="Skills" class="form-label">Skills</label>
                            <input asp-for="Skills" class="form-control border-primary" placeholder="Enter doctor's skills" />
                            <span asp-validation-for="Skills" class="text-danger"></span>
                        </div>

                        <!-- Speciality -->
                        <div class="form-group mb-3">
                            <label asp-for="sId" class="control-label">Select Speciality</label>
                            <select class="form-control" asp-for="sId" asp-items="@(new SelectList(ViewBag.Specialities,"sId","sName"))"></select>
                            <span asp-validation-for="sId" class="text-danger"></span>
                        </div>

                        <!-- Contact -->
                        <div class="form-group mb-4">
                            <label asp-for="dContact" class="form-label">Contact Number</label>
                            <input asp-for="dContact" class="form-control border-primary" placeholder="Enter contact number" />
                            <span asp-validation-for="dContact" class="text-danger"></span>
                        </div>

                        <!-- Submit Button -->
                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-success btn-lg w-100">Create Profile</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <a href="@Url.Action("AdminHome", "Admin")" class="btn btn-secondary mt-3">Back to Home</a>
                </div>
            </div>
        </div>
    </div>
</div>
